<!DOCTYPE html>
    <html lang="en">
       <head>
          <meta charset="UTF-8">
          <title>Formulário de cadastro de Notícia</title>
       </head>
    <body>
    
      <h1>Adicionar notícia</h1>
      <br>
      <% if(validacao){ %>
         <ul>
            <% for(var i = 0; i < validacao.length -1; i++) { %>
               <li>
                  <%= validacao[i].msg  %>
               </li>
               <% } %>
         </ul>
         <% } %>
      


     <form action="/noticias/salvar" method="post">
        <label>Título</label>
        <input type="text" name="titulo" value="<%= noticia.titulo%>" id="titulo" placeholder="Titulo da noticia">
        <br>
      <label for="">Resumo</label>  
      <input type="text" name="resumo" value="<%= noticia.resumo%>" id="resumo" placeholder="Resumo da notícia">
      <br>
      <label>Nome do Autor</label>
      <input type="text" name="autor" value="<%= noticia.autor%>" id="autor" placeholder="Autor da notícia">
      <br>
      <label>Data dos Fatos</label>
      <input type="date" name="data_noticia" value="<%= noticia.data_noticia%>" id="data_noticia" placeholder="Data da Notícia">
       <br>
      <label>Noticia</label>
        <textarea name="noticia" id="noticia" cols="30" rows="5">
           <%= noticia.noticia%>
        </textarea>
        <br>
        <input type="submit" value="Enviar">
     </form>
    </body>
</html>